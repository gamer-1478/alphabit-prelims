<body>
    <div class="form-div">
        <h1>Login</h1>
        <p>Don't have an account? <a href="/register">Register</a></p>
        <form class="login-form" action="/login" method="POST">
            <label for="email" class="email-label">Email Address</label>
            <input type="text" id="email" name="email" class="email" placeholder="john@gmail.com">
            <label for="password" class="pw-label">Password </label>
            <a class="label-link position-absolute top-0 right-0" tabindex="0" href="/password_reset">
                Forgot password?</a>
            <input type="password" id="password" placeholder="john1234" name="password" class="password">
            <input type="submit" class="btn" value="Sign In" class="index-submit" id="index-submit">
        </form>
    </div>
    <img src="https://media.discordapp.net/attachments/741244174736556076/887777563097858058/unknown.png?width=549&height=513"
        class="img" alt="">
</body>
