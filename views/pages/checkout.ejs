<h1 style="margin-top: 5vh; margin-left:5vh">CheckOut</h1>

<% if (user.cart.length >0) {%>


<p style="font-size:30px; margin-top: 1vh; margin-left:5vh">Total Price: $<%=total%></p>
    <div class="line-1" style="height: 200%;"></div>

<div class="check-for-div">
    <h2>Enter your information</h2>
    <br>
    <form action="/consumer/checkout" class="check-for" onsubmit="return validateForm()" method="POST">
        <label for="name" class="n-f">Name</label>
        <input name="name" id="name" value="<%=user['name']%>" readonly>
        <label for="address_1" class="a-f">Address Line 1</label>
        <input name="address_1" id="address_1" required>
        <label for="address_2" class="a-f-1">Address Line 2</label>
        <input name="address_2" id="address_2" required>
        <label for="city" class="c-f">City</label>
        <input name="city" id="city" required>
        <label for="state" class="s-f">State</label>
        <input name="state" id="state" required>
        <label for="country" class="co-f">Country</label>
        <input name="country" id="country" required>
        <label for="pin" class="p-f">Pin Code</label>
        <input type="number" name="pin" id="pin" required>
        <label for="cc" class="cc-f">Credit Card Number</label>
        <input name="cc" id="cc" required>
        <label for="issue" class="iss-f">Issued (MM/YY)</label>
        <input type="date" name="issue" id="issue" required>
        <label for="expiry" class="ex-f">Expiry (MM/YY)</label>
        <input type="date" name="expiry" id="expiry" required>
        <label for="cvv" class="cv-f">CVV</label>
        <input name="cvv" id="cvv" type="password" required>
        <button type="submit">Order</button>
    </form>
    
</div>
<hr>
<% } else { %>
<h1 style="margin-top: 5vh; margin-left:5vh">Add Products To Cart To Get Started</h1>
<% } %>

