<h1 onclick="new function(){
    window.location.href = window.location.origin+'/consumer';
}">Dashboard</h1>

<form class="search-form" onclick="preventDefault();" action="/consumer" method="post">
    <label for="query">Product Search</label>
    <input type="text" id="query" name="query" class="query">
</form>

<img src="<%=product['image_']%>" style="height: 400px; width:400px;" />
<h2><%=product.title%></h2>
<h3>Description : <%=product.description%></h3>
<h3>USD$ : <%=product.price%></h3>
<p>Category : <%=product.category%></p>
<p>Rating : <%= product.rating.rate %> </p>
<p>Verified Reviewers : <%= product.rating.count %> </p>
<p>Quantity Left : <%= product.quan %></p>


<% if (product.quan >= 1){ %>
<form action="/consumer/add_to_cart" method="post">
    <input value="<%=product._id%>" id="id" name="id" hidden>
    <label for="count">Quantity</label>
    <input type="number" id="count" name="count" value="1" min="1" max="<%= product.quan %>">
    <button type="submit">Add to Cart</button>
</form>
<% } else { %>
<h3>Product Out Of Stock</h3>
<% } %>